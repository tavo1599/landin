---
const servicios = [
  {
    titulo: "Metodologías de innovación para el cambio digital",
    descripcion: "Desarrollo de aplicaciones.",
    detalle: "WEB - IOS - Android",
    imagen: "/assets/servicios/serv1.png",
  },
  {
    titulo: "Alineados con las tendencias tecnológicas de vanguardia",
    descripcion: "Soluciones.",
    detalle: "CLOUD - DOMINIOS y HOSTING",
    imagen: "/assets/servicios/serv2.png",
  },
  {
    titulo: "Desarrollamos nuestros software bajo frameworks ágil",
    descripcion: "Soluciones.",
    detalle: "ERP - CRM para empresas",
    imagen: "/assets/servicios/serv3.png",
  },
  {
    titulo: "Soluciones para puntos de venta - Facturación electrónica",
    descripcion: "Lleva un eficiente control de tu empresa.",
    detalle: "",
    imagen: "/assets/servicios/serv4.png",
  },
  {
    titulo: "Expertos en desarrollo y diseño de tiendas virtuales",
    descripcion: "Optimiza tu tienda ideal.",
    detalle: "",
    imagen: "/assets/servicios/serv5.png",
  }
];
---

<section class="servicios-section" id="servicios">
  <h2 class="titulo-servicios">Nuestros Servicios</h2>
  {servicios.map((servicio, i) => (
    <div class="servicio-container">
      <div class="texto servicio-texto" id={`texto${i}`}>
        <h2>{servicio.titulo}</h2>
        <p>{servicio.descripcion}</p>
        {servicio.detalle && <p class="detalle">{servicio.detalle}</p>}
      </div>
      <div class="imagen servicio-img" id={`imagen${i}`}>
        <img src={servicio.imagen} alt={servicio.titulo} />
      </div>
    </div>
  ))}
</section>

<style>
.servicios-section {
  background-color: #080719;
  padding: 60px 20px;
}

.titulo-servicios {
  font-family: 'Michroma', sans-serif;
  text-align: center;
  color: white;
  font-size: 2.2rem;
  margin-bottom: 60px;
}

.servicio-container {
  max-width: 1200px;
  margin: 0 auto 80px;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  gap: 40px;
}

.texto {
  color: white;
  flex: 1 1 300px;
  opacity: 0;
  transform: translateX(-50px);
  transition: all 1s ease;
}

.texto.visible {
  opacity: 1;
  transform: translateX(0);
}

.texto h2 {
  font-family: 'Michroma', sans-serif;
  font-size: 1.5rem;
  margin-bottom: 16px;
}

.texto p {
  margin-bottom: 10px;
  font-size: 1rem;
  line-height: 1.6;
  font-family: 'Michroma', sans-serif;
}

.detalle {
  font-weight: lighter;
  font-size: 0.9rem;
  opacity: 0.8;
}

.imagen {
  flex: 1 1 300px;
  text-align: center;
  opacity: 0;
  transform: translateX(50px);
  transition: all 1s ease;
}

.imagen.visible {
  opacity: 1;
  transform: translateX(0);
}

.imagen img {
  max-width: 60%;
  height: auto;
  border-radius: 10px;
  box-shadow: 0 8px 16px rgba(0,0,0,0.2);
}

/* Responsive */
@media (max-width: 768px) {
  .servicio-container {
    flex-direction: column;
    text-align: center;
  }

  .texto, .imagen {
    transform: none;
    opacity: 1;
  }

  .texto.visible, .imagen.visible {
    transform: none;
    opacity: 1;
  }

  .titulo-servicios {
    font-size: 1.8rem;
  }

  .texto h2 {
    font-size: 1.3rem;
  }
}
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const total = 5;
    for (let i = 0; i < total; i++) {
      const texto = document.getElementById(`texto${i}`);
      const imagen = document.getElementById(`imagen${i}`);

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add("visible");
          }
        });
      }, { threshold: 0.3 });

      if (texto) observer.observe(texto);
      if (imagen) observer.observe(imagen);
    }
  });
</script>
