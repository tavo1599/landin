---
const servicios = [
  {
    titulo: "Metodologias de innovacion para el cambio digital",
    descripcion: "Desarrollo de aplicaciones.",
    detalle: "WEB - IOS - Android",
    imagen: "/assets/servicios/serv1.png",
  },
  {
    titulo: "Alineados con las tendencias tecnologicas de vanguardia",
    descripcion: "Soluciones.",
    detalle: "CLOUD - DOMINIOS y HOSTING",
    imagen: "/assets/servicios/serv2.png",
  },
  {
    titulo: "Desarrollamos nuestros software bajo freameworks agile",
    descripcion: "Soluciones.",
    detalle: "ERP - CRM para empresas",
    imagen: "/assets/servicios/serv3.png",
  },
  {
    titulo: "soluciones para puntos de venta - Facturación electronica",
    descripcion: "Lleva un eficiente control de tu empresa.",
    detalle: "",
    imagen: "/assets/servicios/serv4.png",
  },
  {
    titulo: "Experto en desarrollo y diseño de tiendas virtuales",
    descripcion: "Optimiza tu tienda ideal.",
    detalle: "",
    imagen: "/assets/servicios/serv5.png",
  }
];
---

<section class="servicios-section" id="servicios">
  <h2 class="titulo-servicios">Nuestros Servicios</h2>
  {servicios.map((servicio, i) => (
    <div class="container">
      <div class={`texto servicio-texto`} id={`texto${i}`}>
        <h2>{servicio.titulo}</h2>
        <p>{servicio.descripcion}</p>
        <p class="detalle">{servicio.detalle}</p>
      </div>

      <div class={`imagen servicio-img`} id={`imagen${i}`}>
        <img src={servicio.imagen} alt={servicio.titulo} />
      </div>
    </div>
  ))}
</section>

<style>

.titulo-servicios {
  text-align: center;
  color: white;
  font-size: 2.4rem;
  margin-bottom: 40px;
  font-weight: bold;
}

.servicios-section {
  background-color: rgba(8, 7, 25, 1);
  padding: 60px 20px;
  overflow: hidden;
}

.container {
  max-width: 1200px;
  margin: 80px auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 40px;
}

.texto {
  color: white;
  flex: 1;
  min-width: 300px;
  opacity: 0;
  transform: translateX(-50px);
  transition: all 1s ease;
}

.texto.visible {
  opacity: 1;
  transform: translateX(0);
}

.texto h2 {
  font-size: 1.8rem;
  margin-bottom: 20px;
}

.texto p {
  margin-bottom: 10px;
  font-size: 1rem;
  line-height: 1.5;
}

.detalle {
  font-weight: lighter;
  font-size: 0.9rem;
}

.imagen {
  flex: 1;
  min-width: 300px;
  text-align: center;
  opacity: 0;
  transform: translateX(50px);
  transition: all 1s ease;
}

.imagen.visible {
  opacity: 1;
  transform: translateX(0);
}

.imagen img {
  max-width: 100%;
  height: auto;
}
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const total = 5; // cantidad de servicios

    for (let i = 0; i < total; i++) {
      const texto = document.getElementById(`texto${i}`);
      const imagen = document.getElementById(`imagen${i}`);

      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add("visible");
            }
          });
        },
        { threshold: 0.3 }
      );

      observer.observe(texto);
      observer.observe(imagen);
    }
  });
</script>
