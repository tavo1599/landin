<style>
@import url('https://fonts.googleapis.com/css2?family=Michroma&display=swap');

.hero {
  background-color: #080719;
  color: #f2f2f2;
  padding: 80px 20px;
  overflow: hidden;
}

.container {
  max-width: 1300px;
  margin: 0 auto;
  padding: 0 20px;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  gap: 40px;
}

/* Animaciones */
.hero-texto,
.hero-imagen {
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 1s forwards;
}

.hero-imagen {
  animation-delay: 0.4s;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Texto */
.hero-texto {
  flex: 1 1 500px;
}

.hero-texto h1 {
  font-family: 'Michroma', sans-serif;
  font-size: 2.5rem;
  margin-bottom: 20px;
  line-height: 1.3;
}

.hero-texto p {
  font-size: 1rem;
  line-height: 1.6;
  margin-bottom: 30px;
  max-width: 550px;
}

/* Bot칩n */
.btn {
  display: inline-block;
  padding: 12px 24px;
  border: 1px solid #fff;
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
  transition: all 0.3s ease;
}

.btn:hover {
  background-color: #fff;
  color: #0b0b1f;
}

/* Imagen */
.hero-imagen {
  flex: 1 1 400px;
  text-align: center;
}

.hero-imagen img {
  max-width: 100%;
  height: auto;
}

/* Responsive */
@media (max-width: 768px) {
  .container {
    flex-direction: column;
    text-align: center;
  }

  .hero-texto h1 {
    font-size: 2rem;
  }

  .hero-texto p {
    margin: 0 auto 30px;
  }
}
</style>
